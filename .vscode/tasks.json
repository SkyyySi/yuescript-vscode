	"tasks": [
		{
			"label": "Compile syntax to JSON",
			"type": "process",
			"command": "npx",
			"args": [
				"json5",
				"--space",
				"t",
				"${workspaceFolder}/syntaxes/yuescript.tmLanguage.json5",
				"--out-file",
				"${workspaceFolder}/syntaxes/yuescript.tmLanguage.json"
			]
		}
	]
}