{
	// symbols used for commenting
	"comments": {
		"lineComment": "--",
		"blockComment": [ "--[[", "]]" ]
	},
	// symbols used as brackets
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	// symbols that are auto closed when typing
	"autoClosingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["'", "'"],
		["\"", "\""],
		["<", ">"]
	],
	// symbols that can be used to surround a selection
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["'", "'"],
		["\"", "\""],
		["<", ">"]
	],
	"colorizedBracketPairs": [
		["(", ")"],
		["[", "]"],
		["{", "}"]
	],
	"autoCloseBefore": ";:.,=}])> \n\t",
	"folding": {
		"offSide": true
	},
	"indentationRules": {
		// TODO: Add function expression and other keywords that mark blocks here
		"increaseIndentPattern": "(^[ \t]*class)"
	}
}
